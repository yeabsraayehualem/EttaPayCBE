<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Merchant Name"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/editTextMerchantName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Merchant Name"
        android:inputType="textPersonName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Terminal ID"
        android:layout_marginTop="16dp"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/editTextTerminalId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Terminal ID"
        android:inputType="text" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Retailer ID"
        android:layout_marginTop="16dp"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/editTextRetailerId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Retailer ID"
        android:inputType="text" />
    <Button
        android:id="@+id/buttonSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:layout_marginTop="24dp" />

</LinearLayout>
