<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/titleSize"
        android:elevation="4dp"
        app:titleTextAppearance="@style/Toolbar.TitleText" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                android:id="@+id/get_sys_param"
                layout="@layout/common_item" />

            <include
                android:id="@+id/set_sys_param"
                layout="@layout/common_item" />

            <include
                android:id="@+id/buzzer"
                layout="@layout/common_item" />

            <include
                android:id="@+id/led"
                layout="@layout/common_item" />

            <include
                android:id="@+id/screen_mode"
                layout="@layout/common_item" />

            <include
                android:id="@+id/emv_callback_time"
                layout="@layout/common_item" />

            <include
                android:id="@+id/pin_anti_exhaustive_mode"
                layout="@layout/common_item" />

            <include
                android:id="@+id/sys_set_wakeup"
                layout="@layout/common_item" />

            <include
                android:id="@+id/kb_beep_mode"
                layout="@layout/common_item" />

            <include
                android:id="@+id/shard_lib"
                layout="@layout/common_item" />

            <include
                android:id="@+id/data_transmission"
                layout="@layout/common_item" />

        </LinearLayout>
    </ScrollView>


</LinearLayout>